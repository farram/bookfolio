{% extends 'base.html.twig' %}
{% block title %}
	{{"Nous réalisons vos idées sur Bookfolio - Boîte à idées | Book-folio.fr" | trans }}
{% endblock %}
{% block body %}
	<div class="wrapper">
		<div class="section">
			<div class="w-layout-grid content6-grid">
				<div id="w-node-7c0094a6f1d0-1479179f" class="content6-headline-grid">
					<div id="w-node-7c0094a6f1d1-1479179f" class="content6-headline-wrap mb0">
						<div class="size1-text">{{"Nous réalisons vos idées !" | trans}}</div>
						<p class="paragraph-70 text-center">{{"Vous avez des idées qui permettraient de vous faire gagner un temps précieux ? D'accroître votre visibilité ? On s'engage à vous écouter :)" | trans}}<br></p>
					</div>
					<div id="w-node-6b143b24dfb5-1479179f">
						<div class="cta7-form w-form">
							{{ form_start(form, {'attr': {'action': path('suggestion_box'),'id':'contact-form','class':'cta7-form-wrap'}}) }}

							<div class="w-row">
								<div class="column-12 w-col w-col-12">
									<div class="input-field mb-3">
										{{ form_widget(form.email, { 'attr': {'placeholder':'Adresse e-mail','class' : 'text-field bottom-margin-field w-input'}}
										) }}
									</div>
								</div>
							</div>

							<div class="w-row">
								<div class="column-12 w-col w-col-12">
									<div class="input-field">
										{{ form_widget(form.message, { 'attr': {'placeholder':'Saisissez votre message','class' : 'text-area w-input','rows' : '3', 'cols' : '200' }}
										) }}
									</div>
								</div>
							</div>

							<div class="w-row">
								<div class="column-14 w-col w-col-12 mt-2">
									{{ form_widget(form.recaptcha) }}
								</div>
							</div>

							<div class="w-row">
								<div class="column-12 w-col w-col-12">
									<button type="submit" class="mt-3 button-small form-centered-button w-button" name="comment-button">Envoyer</button>
								</div>
							</div>

							{{ form_end(form) }}

						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
