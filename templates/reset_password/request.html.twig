{% extends 'base_metronic.html.twig' %}
{% use "bootstrap_base_layout.html.twig" %}
{% block title %}
	{{"Bookfolio - Annuaire des books | Suite de la création de book en ligne" | trans}}
{% endblock %}

{% block body %}
	<div class="d-flex flex-column flex-lg-row-fluid py-10">
		<div class="d-flex flex-center flex-column flex-column-fluid">
			<div class="w-lg-600px p-10 p-lg-15 mx-auto">
				{{ form_start(requestForm, {'attr': {'class':'form w-100','novalidate': 'novalidate'}}) }}
				<input autocomplete="false" name="hidden" type="text" class="hidden">
				<div class="mb-10 text-center">
					<h1 class="text-dark mb-3">{{"Réinitialiser votre mot de passe" | trans}}</h1>
					<div class="text-gray-400 fw-bold fs-4">
						{{"Vous avez oublié votre mot de passe ?" | trans}}
						<br>
						{{"Comptez sur nous pour vous permettre de récupérer votre compte !" | trans}}
					</div>
				</div>

				<div class="fv-row mb-7">
					{{ form_label(requestForm.email, 'Saisissez votre adresse e-mail' | trans, {'label_attr': {'class': 'form-label fw-bolder text-dark fs-6'}})  }}
					{{ form_widget(requestForm.email, {'attr': {'class': 'form-control form-control-lg form-control-solid'}}) }}
					{{ form_errors(requestForm.email) }}
					{{ form_help(requestForm.email) }}
				</div>


				<div class="text-center">
					<button type="submit" class="btn btn-lg btn-primary fw-bolder me-4">
						{{"Confirmer" | trans}}
					</button>
					<a href="{{ path('app_login') }}" class="btn btn-lg btn-light-primary fw-bolder">Annuler</a>
				</div>
				{{ form_end(requestForm) }}
			</div>
		</div>
		<div class="d-flex flex-center flex-wrap fs-6 p-5 pb-0">
			<div class="d-flex flex-center fw-bold fs-6">
				<a href="{{ path('cgu') }}" class="text-muted text-hover-primary px-2" target="_blank">{{"CGU" | trans}}</a>
				<a href="{{ path('politicy') }}" class="text-muted text-hover-primary px-2" target="_blank">{{"Politique de confidentialité" | trans}}</a>
			</div>
		</div>
	</div>
{% endblock %}
