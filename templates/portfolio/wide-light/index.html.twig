{% extends 'portfolio/' ~ design ~'/base.html.twig' %}

{% block title %}
	{% if book.getTitle() %}
		{{ book.getTitle() }}
	{% else %}
		{{ book.user.getFullname() }}
		- Accueil
	{% endif %}
{% endblock %}

{% block body %}
	<div class="container inner">
		<div class="hero text-center">
			<h1>{{ book.user.getFullname() }}</h1>
			<p>{{ book.user.getProfession() }}
				-
				{{ book.user.getExperience() }}<br>
				{{ book.user.address.getLocation() }}</p>
		</div>
		<div class="items row row-offset-0">
			<div class="col-12">
				<div id="items_home"></div>
			</div>
		</div>
		<div class="row">
			{% if showGallery %}
				{% include 'portfolio/partial/link_gallery.html.twig' with {'book': book,'col':'col-lg-4 col-lg-offset-4'} %}
			{% endif %}
		</div>
	</div>
{% endblock %}
