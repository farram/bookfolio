<!DOCTYPE html>
<html lang="fr" data-wf-page="{{ idpage }}" data-wf-site="5e494503a90a2ce9983d5a81">
	<head>
		<meta charset="utf-8">
		<title>
			{% block title %}
				{{ book.title }}
			{% endblock %}
		</title>
		<meta name="description" content="{% block description %} {{ book.getDescription() | raw }} {% endblock %}">
		{% if book.getKeywords() %}
			<meta name="keywords" content="{{ book.getKeywords() | raw }}">
		{% endif %}

		{% if not book.getAllowSeo() %}
			<meta name="robots" content="noindex">
			<meta name="googlebot" content="noindex">
		{% else %}
			<meta name="robots" content="index, follow">
		{% endif %}
		<meta name="referrer" content="unsafe-url">
		<meta name="apple-mobile-web-app-capable" content="yes"/>
		<link rel="icon" type="image/ico" href="{{ asset('assets/img/favicon.png') }}">
		<link rel="canonical" href="{{ absolute_url('portfolio_index', { name : book.name }) }}"/>
		<meta http-equiv="X-UA-Compatible" content="IE=edge">
		<meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

		{% block stylesheets %}
			{{ encore_entry_link_tags('alba-light') }}
			<script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
			<script src="https://ajax.googleapis.com/ajax/libs/webfont/1.6.26/webfont.js"></script>
		{% endblock %}
	</head>

	<script type="text/javascript">
		WebFont.load({
google: {
families: [
"Oswald:200,300,400,500,600,700",
"Work Sans:100,200,300,regular,500,600,700,800,900",
"Chivo:300,regular,italic,700,900",
"Amiri:regular,italic",
"Poppins:regular,600,700,800,900"
]
}
});
	</script>
	<!-- [if lt IE 9]><script src="https://cdnjs.cloudflare.com/ajax/libs/html5shiv/3.7.3/html5shiv.min.js" type="text/javascript"></script><![endif] -->
	<script type="text/javascript">
		!function (o, c) {
var n = c.documentElement,
t = " w-mod-";
n.className += t + "js",
("ontouchstart" in o || o.DocumentTouch && c instanceof DocumentTouch) && (n.className += t + "touch")
}(window, document);
	</script>
	<body class="body">
		<div>
			<div class="container">
				<div class="navigation-bar">
					<a href="{{ path('portfolio_index', { name : book.name }) }}" aria-current="page" class="brand-2 w-nav-brand w--current">
						<h1 class="heading username" title="">{{ book.user.getFullname() }}</h1>
					</a>
					<div class="navigation-bar-controls">
						<div data-w-id="e9d0b8de-9e64-37c3-6bc9-d203e8c239e3" class="menu-toggle">
							<div data-w-id="4adf2595-70a3-4f5d-1761-a1ebd6a3c2e9" class="menu-toggle-line"></div>
							<div data-w-id="007f7a17-2adc-bff0-8659-ddf7dde96a59" class="menu-toggle-line"></div>
						</div>
					</div>
				</div>
			</div>
			<div data-w-id="6507be8f-3426-f2c2-6001-e73408859516" class="menu-overlay">
				<div class="container menu-overlay-container">
					<div>
						<div class="navigation-bar">
							<a href="{{ path('portfolio_index', { name : book.name }) }}" aria-current="page" class="brand-2 brand-white w-nav-brand w--current">
								<h1 class="heading username brand-white" title="">{{ book.user.getFullname() }}</h1>
							</a>
							<div class="navigation-bar-controls">
								<div data-w-id="9730554d-9496-e59b-4806-5d8a238e4eb3" class="menu-toggle menu-toggle-close">
									<div data-w-id="9730554d-9496-e59b-4806-5d8a238e4eb4" class="menu-toggle-line"></div>
									<div data-w-id="9730554d-9496-e59b-4806-5d8a238e4eb5" class="menu-toggle-line"></div>
								</div>
							</div>
						</div>
						<ul class="navigation-menu">
							<li class="list-item {{ (app.request.get('_route') == " portfolio_index") ? 'w--current':'' }}">
								<a href="{{ path('portfolio_index', { name : book.name }) }}" class="text-h1 text-white nav-menu-link">Accueil</a>
							</li>
							<li class="list-item {{ (app.request.get('_route') == " portfolio_about") ? 'w--current':'' }}">
								<a href="{{ path('portfolio_about', { name : book.name }) }}" class="text-h1 text-white nav-menu-link">À propos</a>
							</li>
							{% if book.user.getVideos | length > 0 %}
								<li class="list-item {{ (app.request.get('_route') == " portfolio_video") ? 'w--current':'' }}">
									<a href="{{ path('portfolio_video', { name : book.name }) }}" class="text-h1 text-white nav-menu-link">Vidéos</a>
								</li>
							{% endif %}

							{% if book.getAllowComments %}
								<li class="list-item {{ (app.request.get('_route') == " portfolio_guestbook") ? 'w--current':'' }}">
									<a href="{{ path('portfolio_guestbook', { name : book.name }) }}" class="text-h1 text-white nav-menu-link">Commentaires</a>
								</li>
							{% endif %}

							{% if pages %}
								{% for page in pages %}
									<li class="list-item {{ (app.request.get('_route') == " portfolio_page") ? 'w--current':'' }}">
										<a href="{{ path('portfolio_page', { name : book.name, slug : page.getSlug() }) }}" class="text-h1 text-white nav-menu-link">{{ page.getTitle }}</a>
									</li>
								{% endfor %}
							{% endif %}

							{% if book.showContact %}
								<li class="list-item {{ (app.request.get('_route') == " portfolio_contact") ? 'w--current':'' }}">
									<a href="{{ path('portfolio_contact', { name : book.name }) }}" class="text-h1 text-white nav-menu-link">Contact</a>
								</li>
							{% endif %}

						</ul>
					</div>
				</div>
			</div>
		</div>

		{% block body %}{% endblock %}
		<div>
			<div class="container">
				<p class="paragraph-3">
					Copyright
					{{ "now"|date("Y") }}
					<a href="{{ path('index') }}" target="_blank" class="link-3 w--current">Bookfolio</a>
					- Tous droits réservés.<br>
					Book crée le
					{{ book.user.getCreatedAt() | format_datetime(locale='fr', pattern="dd MMMM YYYY") }}
					{% if book.getShowVisitorCounter %}-
						{{ book.user.getStatistics | length }}
						{{ (book.user.getStatistics | length > 1) ? 'visites':'visite'}}
					{% endif %}
				</p>
				<p class="paragraph-3">
					{% if not iamFollow %}
						<a href="{{ path('portfolio_add_follow', { name : book.name }) }}" class="link-3 w--current">S'abonner</a>
					{% else %}
						<a href="{{ path('portfolio_remove_follow', { name : book.name }) }}" class="link-3 w--current">Se désabonner</a>
					{% endif %}
				</p>
			</div>
		</div>

		{% block javascripts %}
			{{ encore_entry_script_tags('alba-light') }}
			<!-- [if lte IE 9]><script src="https://cdnjs.cloudflare.com/ajax/libs/placeholders/3.0.2/placeholders.min.js"></script><![endif] -->
			<script>
				$(document).contextmenu(function () {
return false;
});
			</script>

			{% if book.getCodeAnalytics() %}
				<script>
					(function (i, s, o, g, r, a, m) {
i['GoogleAnalyticsObject'] = r;
i[r] = i[r] || function () {
(i[r].q = i[r].q || []).push(arguments)
},
i[r].l = 1 * new Date();
a = s.createElement(o),
m = s.getElementsByTagName(o)[0];
a.async = 1;
a.src = g;
m.parentNode.insertBefore(a, m)
})(window, document, 'script', 'https://www.google-analytics.com/analytics.js', 'ga');

ga('create', '{{ book.getCodeAnalytics() }}', 'auto');
ga('send', 'pageview');
				</script>
			{% else %}
				<script>
					(function (i, s, o, g, r, a, m) {
i['GoogleAnalyticsObject'] = r;
i[r] = i[r] || function () {
(i[r].q = i[r].q || []).push(arguments)
},
i[r].l = 1 * new Date();
a = s.createElement(o),
m = s.getElementsByTagName(o)[0];
a.async = 1;
a.src = g;
m.parentNode.insertBefore(a, m)
})(window, document, 'script', 'https://www.google-analytics.com/analytics.js', 'ga');

ga('create', 'UA-79500816-1', 'auto');
ga('create', 'UA-79500816-1', {cookieDomain: '.book-folio.fr'});
ga('send', 'pageview');
				</script>
			{% endif %}

			<script type="text/javascript">
				var name = '{{ book.name }}'
			</script>
		{% endblock %}


	</body>
</html>
