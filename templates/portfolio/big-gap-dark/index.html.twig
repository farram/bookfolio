{% extends 'portfolio/' ~ design ~'/base.html.twig' %}

{% block title %}
	{% if book.title %}
		{{ book.title }}
	{% else %}
		{{ book.user.fullname }}
		- Accueil
	{% endif %}
{% endblock %}

{% block body %}
	<div class="container-fluid top-banner full-height center_content " style="min-height: 380px;">
		<div class="content" style="top: 40px;">
			<div class="row text-light">
				<div class="col-xs-12">
					<h4 class="subtitle">{{ book.user.profession | upper }}
						/
						{{ book.user.experience | upper}}
					</h4>
					<h1 class="title">{{ book.user.fullname | upper }}</h1>
					<h4 class="subtitle mt-0">{{ book.user.address.location | upper }}
					</h4>
					{% if book.user.about %}
						<div class="descr">
							{{ book.user.about | raw }}
						</div>
					{% endif %}
				</div>
			</div>
		</div>
	</div>
	<div class="container clearfix no-padd margin-lg-30b">
		<div class="row">
			<div class="col-12">
				<div id="portfolioImagesHome"></div>
			</div>
			{% if showGallery %}
				{% include 'portfolio/partial/link_gallery.html.twig' with {'book': book,'col':'col-lg-4 col-lg-offset-4'} %}
			{% endif %}
		</div>
	</div>
{% endblock %}
