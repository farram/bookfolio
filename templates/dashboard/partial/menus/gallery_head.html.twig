<div class="card mb-6 mb-xl-9">
	<div class="card-body pt-9 pb-0">
		<div class="d-flex flex-top flex-shrink-0 rounded">
			{% if cover %}
				<div class="symbol-2by3 me-7">
					<img src="{{ cover.imagePath | imagine_filter('thumbnail_card') }}" class="rounded" alt="">
				</div>
			{% endif %}
			<div class="flex-grow-1">
				<div class="d-flex justify-content-between align-items-start flex-wrap mb-2">
					<div class="d-flex flex-column">
						<div class="d-flex align-items-center mb-1">
							<a href="#" target="_blank" class="text-gray-800 text-hover-primary fs-2 fw-bolder me-3">{{gallery.name}}</a>
						</div>
						<small class="text-gray-400 d-block fw-bold">
							{{ 'Créee' | trans }}
							{{ gallery.getCreatedAt() | ago}}
							-
							{{"Mise à jour" | trans}}
							{{ gallery.getUpdatedAt() | ago}}
						</small>
						{% if gallery.description %}
							<div class="d-flex flex-wrap fw-bold mb-4 fs-5 text-gray-400">{{gallery.description}}</div>
						{% else %}
							<div class="d-flex flex-wrap fw-bold mb-4 fs-5 text-gray-400">{{"Aucune description" | trans}}</div>
						{% endif %}
					</div>

				</div>
				<div class="d-flex flex-wrap justify-content-start">
					<div class="d-flex flex-wrap">
						<div class="border border-gray-300 border-dashed text-center rounded min-w-125px py-3 px-4 me-6 mb-3">
							<div class="align-items-center">
								<div class="fs-4 fw-bolder">{{ images| length }}</div>
							</div>
							<div class="fw-bold fs-6 text-gray-400">
								{% if images|length > 1 %}
									{{"Publications" | trans}}
								{% else %}
									{{"Publication" | trans}}
								{% endif %}
							</div>
						</div>

						<div class="border border-gray-300 border-dashed text-center rounded min-w-125px py-3 px-4 me-6 mb-3">
							<div class="align-items-center text-center">
								<div class="fs-4 fw-bolder text-center">
									{{ gallery.getGalleryViews() | length}}
								</div>
							</div>
							<div class="fw-bold fs-6 text-gray-400">
								{% if gallery.getGalleryViews()|length > 1 %}
									{{"vues" | trans}}
								{% else %}
									{{"vue" | trans}}
								{% endif %}
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
		<div class="d-flex overflow-auto h-55px">
			<ul class="nav nav-stretch nav-line-tabs nav-line-tabs-2x border-transparent fs-5 fw-bolder flex-nowrap">
				<li class="nav-item">
					<a class="nav-link text-active-primary me-6 {% if current_path == 'galleries_show' %} active {% endif %}" href="{{ path('galleries_show', {'slug': gallery.getSlug()}) }}">Aperçu</a>
				</li>
				<li class="nav-item">
					<a class="nav-link text-active-primary me-6 {% if current_path == 'galleries_edit' %} active {% endif %}" href="{{ path('galleries_edit', {'slug': gallery.getSlug()}) }}">{{"Modifier la galerie" | trans}}</a>
				</li>
			</ul>
		</div>
	</div>
</div>
