{% set current_path = app.request.get('_route') %}
<div class="card">
	<div class="card-body">
		<div class="text-start">
			<nav class="nav flex-column">
				<a class="nav-link {% if current_path == 'account_details' %} active {% else %} text-dark {% endif %}" {% if current_path == 'account_details' %} aria-disabled="false" {% else %} aria-current="page" {% endif %} href="{{ path('account_details') }}">
