				<a class="nav-link {% if current_path == 'account_billing' %} active {% else %} text-dark {% endif %}" {% if current_path == 'account_billing' %} aria-disabled="false" {% else %} aria-current="page" {% endif %} href="{{ path('account_billing') }}">
					{{"Abonnement" | trans}}
				</a>
			</nav>
			<div class="mt-3">
				<p class="text-muted font-12 mb-0">{{"Dernière mise à jour" | trans}}
					:
					{{ app.user.getUpdatedAt()|ago }}</p>
			</div>
		</div>
	</div>
</div>

